@using System.Text.Encodings.Web
@model UploadFileInProgressModel

<div id="uploadTracker">
    <h2>
        Upload in progress...
        
        @if (Model.FileName != null) {
            <small>Uploading file @Model.FileName</small>
        }
    </h2>

    <p id="uploadProgress">
        Initializing progress...
    </p>

    <div class="progress">
        <div class="progress-bar progress-bar-striped active" role="progressbar" style="width: 100%;">
            <span class="sr-only">0% Complete</span>
        </div>
    </div>
    
    <span class="pull-right" id="uploadPerformance"></span>
</div>

@{
    string uploadApi = this.Url.RouteUrl("UploadTrackerApi", new { trackerId = Model.FileIdentifier.ToString() });
}

<script>
    window.scriptparams = window.scriptparams || {};
    window.scriptparams.uploadApi = '@JavaScriptEncoder.Default.Encode(uploadApi)';
</script>
<script src="~/build/upload/tracker.js" asp-append-version="true"></script>
